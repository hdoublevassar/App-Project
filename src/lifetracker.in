#!@PYTHON@

# lifetracker.in
# Entry point script for LifeTracker

import os
import sys
import signal
import locale

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)

signal.signal(signal.SIGINT, signal.SIG_DFL)

locale.bindtextdomain('lifetracker', localedir)
locale.textdomain('lifetracker')

if __name__ == '__main__':
    import gi
    gi.require_version('Gtk', '4.0')
    gi.require_version('Adw', '1')
    
    from gi.repository import Gio
    resource_path = os.path.join(pkgdatadir, 'lifetracker.gresource')
    if os.path.exists(resource_path):
        resource = Gio.Resource.load(resource_path)
        resource._register()
    
    from lifetracker.main import main
    sys.exit(main())
